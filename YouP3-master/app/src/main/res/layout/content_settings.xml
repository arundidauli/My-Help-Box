<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autoSearch"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="@string/auto_search_videos_when_typed"/>

    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fullScr"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="@string/fullscreen_mode"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/deskMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="@string/desktop_mode"/>


    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remBar"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="@string/remove_toolbar_experimental"/>


    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/basicAdv"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="@string/basic_enabled_advanced_disabled"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/normal_des" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adv_des" />


</LinearLayout>