<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/meditation_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding5dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/side_nav_bar">

      <!--  <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:alpha="0.3"
            android:scaleType="fitCenter"
            android:tint="#fff" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding5dp">
                <ImageView
                    android:id="@+id/img_cleared"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="@dimen/padding5dp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/white"
                    android:contentDescription="@null"/>
                <ImageView
                    android:id="@+id/img_pending"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_pending"
                    android:padding="@dimen/padding5dp"
                    android:tint="@color/white"
                    android:contentDescription="@null"/>
            </RelativeLayout>
          <!--  <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_check_box_black_24dp"
                android:tint="@color/white" />-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_marginTop="10dp"
                    android:padding="@dimen/padding5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding5dp"
                    android:text="@string/app_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                    android:textColor="#fff" />


            </LinearLayout>
            <TextView
                android:id="@+id/txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/white_bluebroder"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:text="View More"
                android:layout_marginRight="@dimen/padding5dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/padding5dp" />

        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>